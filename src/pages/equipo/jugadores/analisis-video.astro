---
import "@styles/global.css";
import Layout from "@layouts/Layout.astro";
import VideoCard from "@components/cards/VideoCard.astro";
import UploadIcon from "@assets/upload_icon.svg";
import { ejemplosPartidos } from "@consts/navbar-links";

const videos = ejemplosPartidos;
---

<Layout>
    <section id="container-video" class="flex h-svh w-svw p-0">
        <div id="principal" class="flex flex-row w-full h-full justify-around items-start">
            <div id="sidebar" class="flex flex-col gap-5 w-1/5 h-full py-3 px-3 scroll-smooth overflow-y-auto">
                {
                    videos.map(({ partido, fecha }) => (
                        <VideoCard  partido={partido} fecha={fecha} />
                    ))
                }
            </div>
            <div id="video-upload" class="flex flex-col justify-center items-center w-4/5 h-full bg-[#D9D9D9]" >
                <div class="flex flex-col w-2/6 h-2/6 m-10 rounded-lg cursor-pointer transition">
                    <input type="file" id="file-upload" class="hidden" />
                    <label for="file-upload" class="flex flex-col items-center justify-center h-full cursor-pointer">
                        <img src={UploadIcon.src} alt="Upload" class="mb-2 size-32" />
                        <span class="font-bold text-xl pt-1">Sube tu video</span>
                        <span class="text-base text-gray-500">MÃ¡ximo 5GB</span>
                    </label>
                </div>
            </div>
        </div>
    </section>
</Layout>
